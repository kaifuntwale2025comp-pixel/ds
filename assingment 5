#include <iostream>
#include <string>
#include <unordered_map>

using namespace std;

class Stack {
private:
    char arr[100];
    int top;

public:
    Stack() {
        top = -1;
    }

    void push(char value) {
        if (isFull()) {
            cout << "Stack overflow!" << endl;
        } else {
            arr[++top] = value;
        }
    }

    char pop() {
        if (!isEmpty()) {
            return arr[top--];
        }
        return '\0';
    }

    char peek() {
        if (!isEmpty()) {
            return arr[top];
        }
        return '\0';
    }

    bool isEmpty() {
        return top == -1;
    }

    bool isFull() {
        return top == 99;  // Since the stack size is 100, the top index will be 99 when full
    }
};

bool isBalanced(const string& expression) {
    Stack stack;
    unordered_map<char, char> matching_bracket = { {')', '('}, {'}', '{'}, {']', '['} };

    for (char ch : expression) {
        if (ch == '(' || ch == '{' || ch == '[') {
            stack.push(ch);
        }
        else if (ch == ')' || ch == '}' || ch == ']') {
            if (stack.isEmpty() || stack.pop() != matching_bracket[ch]) {
                return false;
            }
        }
    }

    return stack.isEmpty();
}

int main() {
    string expression;
    cout << "Enter an expression: ";
    getline(cin, expression);

    if (isBalanced(expression)) {
        cout << "The expression is balanced." << endl;
    } else {
        cout << "The expression is not balanced." << endl;
    }

    return 0;
}
